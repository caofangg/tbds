.nav-bar{
  display: flex;
  justify-content: space-around;
  flex-wrap: nowrap;
  align-items: center;
  height: 100rpx;
  background-color: #393a3e;
  color: white;
}
.nav-bar-item{
  width: 10%;
}
.nav-bar-itemMore{
  width: 60%;
  text-align: center;
}
.more{
   width: 30px;
  height: 30px; 
  transform: rotate(90deg);
}

