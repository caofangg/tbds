       <view class='myLoop'>
            <image src='{{item.userImg}}' mode='aspectFill' class='headimg'></image>
        </view>
        <view class='userName'>{{item.username}}
        </view>
       <view class='alls'>
          <view  class='KMS'>
            总里数：{{item.userKm}}万KM
          </view>
          <view>总时长：{{item.userTm}}</view>
       </view>
